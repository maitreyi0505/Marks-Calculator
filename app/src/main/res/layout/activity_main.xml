<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6FFF6"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/viewAllMarksButton"
        android:layout_width="189dp"
        android:layout_height="104dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="513dp"
        android:layout_marginBottom="114dp"
        android:backgroundTint="#212121"
        android:backgroundTintMode="multiply"
        android:text="@string/view_all_marks"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:shadowColor="#00212121"
        android:text="@string/student_marks_collection"
        android:textColor="#232323"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <Button
        android:id="@+id/enterMarksButton"
        android:layout_width="189dp"
        android:layout_height="104dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="322dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="305dp"
        android:backgroundTint="#212121"
        android:text="@string/enter_marks"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>